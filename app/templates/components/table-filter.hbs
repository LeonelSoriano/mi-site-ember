
<div class="row">
  <div class="small-2 large-4 columns">hola</div>
  <div class="small-4 large-4 columns">

    <table>
      <thead>
       
           <th style="text-align:center"> seleccione</th>
          {{#each dataHeader as |data index|}}
              <th style="text-align:center"> {{data}}  {{input style="margin-top: 4px" type="text"  key-up=(action "onFilter" index) }}</th>

          {{/each}}
      
       
      </thead>
      <tbody>
    
        {{#each tableValue as |json|}}
              
              <tr >
                  {{#each json as |data index|}}
               
                {{#if index 0}}
                  <td>{{data}}</td>
                {{/if}}
                {{#unless index 0}}

                  <td>

                    <div class="radio">
                      <label>
                          {{input type="radio" name="selectedId" change=(action (mut selectedId) data)  value=data}}
                          <span class="custom-radio"><i class="icon-radio-check"></i></span>
                      </label>
                    </div>


                  </td>


                {{/unless}}
                  
               {{/each}}
              </tr>
        {{/each}}
      </tbody>
    </table>

  </div>
  <div class="small-6 large-4 columns">hola</div>
</div>



 <button {{action "prueba"}} class="ui fluid large teal submit button " >Login</button>




{{yield}}
