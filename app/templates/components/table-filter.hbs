
<div class="row">
  <div class="small-1 large-1 columns">&nbsp;</div>
  <div class="small-9 large-9 columns">
    <div class="row">
        <table>
          <thead>
           
            <th style="text-align:center"> seleccione</th>
              {{#each dataHeader as |data index|}}
                  <th style="text-align:center"> {{data}}  
            {{input style="margin-top: 4px" type="text"  
                key-up=(action "onFilter" data) }}
              </th>

              {{/each}}
          
           
          </thead>
          <tbody>
        
            {{#each tableValue as |json|}}
                  
                  <tr >
                      {{#each json as |data index|}}
                   
                    {{#if index 0}}
                      <td>{{data}}</td>
                    {{/if}}
                    {{#unless index 0}}

                      <td>

                        <div class="radio">
                          <label>
                              {{input type="radio" name="selectedId"
                                change=(action (mut selectedId) data)  value=data}}
                              <span class="custom-radio"><i class="icon-radio-check"></i></span>
                          </label>
                        </div>

                      </td>

                    {{/unless}}
                      
                   {{/each}}
                  </tr>
            {{/each}}
          </tbody>
        </table>
    </div><!--end row -->
    
    <div class="row">
       {{#if data  }}
          <div class="small-6 large-6 columns">
              <div class="small button-group  float-left">
                  <a {{action "onCreate"}} class="success button" style="margin-right: 4px;" >Crear</a>
                    {{#if selectedId  }}
                          <a {{action "onUpdate"}} class="warning button"  style="margin-right: 4px;">Modificar</a>
                          <a {{action "onDelete"}}  class="alert button" style="margin-right: 4px;" >Eliminar</a>
                           <a {{action "onSpecial"}} class=" button" style="margin-right: 4px;" >Especial</a>
                    {{/if}}
            
            </div>
    
        </div>
        
        
        
          <div class="small-6 large-6 columns ">
              <div  class="small button-group  float-right ">
                
                {{#times-each maxPage as |time|}}
  
              <a  {{action "onselectPage" time}} 
                    class=" button" style="margin-right: 4px;" style="pading:1px" >{{time}}</a>
  
  
                {{/times-each}}
               
            </div>
             <div class="small-1 large-6 columns">
            </div> 
        </div>
      {{/if}}<!-- fi table value -->
    </div> <!-- end botoneras -->
    
    
    
  </div>
  <div class="small-1 large-1 columns">&nbsp;</div>
</div>



 <button {{action "prueba"}} class="ui fluid large teal submit button " >Login</button>

{{yield}}
